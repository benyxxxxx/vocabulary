<p id="notice"><%= notice %></p>



<table style="font-size: 20px; margin-left: 200px">
  <thead>
    <tr>
      <th>Word</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="font-family: TakaoExGothic">
    <% @words.reverse_order.each do |word| %>
      <tr>
	<td>
	  <font color="red" size="20px">
	    <%= word.word %>
	  </font> 
	</td>
        
	<% if word != nil %>
	<td><%= link_to 'Show', word_path(word) %></td>
	<% end %>
        <td><%= link_to 'Kill', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

